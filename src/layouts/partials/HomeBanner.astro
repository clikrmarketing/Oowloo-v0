---
import ImageMod from "@/components/ImageMod.astro";
import config from "@/config/config.json";
import type { IHomepageBanner } from "@/pages/index.astro";
import TrustedBrands from "./TrustedBrands.astro";
import RightArrowButton from "@/components/RightArrowButton.astro";



const banner = Astro.props.banner as IHomepageBanner;

const { bannerImages, bulletpoints, content, newsletterButton, title } = banner;
---

<section class="section ph-spacing  ">
  <div class="container">
    <div class="flex flex-col items-center gap-16 lg:gap-28 text-center">
      <div class="lg:col-7 flex flex-col items-center gap-y-8">
        <div>
          {title && <h1 set:html={title} class="mb-5 text-darkBlue" data-aos="fade-up-sm" data-aos-delay="0" />}
          {content && <p set:html={content} class="text-lg" data-aos="fade-up-sm" data-aos-delay="100" />} 
        </div>
          
        
       <div class="flex items-center gap-4">

          <RightArrowButton
          label='Book A Demo'
          link='/contact'
          data-aos="fade-up-sm"
          data-aos-delay="200"
          className="btn btn-primary py-4 bg-primary hover:bg-primary/80 text-light "
        >
        'Book A Demo'
        </RightArrowButton>

          <a
          class="btn btn-primary py-4 hidden lg:inline-block"
          aria-label="Learn More"
          href="#learnmore"
        >
          Learn More
        </a>
       </div>

      </div>
      {
        bannerImages && (
          <div class="w-full grid grid-cols-12 gap-5">
            <div data-aos="fade-up-sm" data-aos-delay="200" class="col-span-5 w-full h-full">
              <ImageMod
                src={bannerImages.left}
                alt="Banner Image"
                class=" w-full h-full object-cover rounded-2xl"
                width={500}
                height={400}
              />
            </div>

            <div class="col-span-3 w-full h-full" data-aos="fade-up-sm" data-aos-delay="350">
              <ImageMod
                src={bannerImages.center}
                alt="Banner Image"
                class="w-full h-full object-cover rounded-2xl"
                width={300}
                height={400}
              />
            </div>
            <div class="col-span-4 w-full h-full" data-aos="fade-up-sm" data-aos-delay="500">
              <ImageMod
                src={bannerImages.right}
                alt="Banner Image"
                class=" w-full h-full object-cover rounded-2xl"
                width={400}
                height={400}
              />
            </div>
          </div>
        )
      }
      
    </div>
  </div>
</section>
